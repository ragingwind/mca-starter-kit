<?xml version='1.0' encoding='utf-8'?>
<widget id="com.your.appid2" version="0.1.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>mca-starter-kit</name>
    <description>Mobile Chrome Apps Starter Kit is Yet Another Opinionated Boilerplate for Chrome Apps development</description>
    <author email="ragingwind@gmail.com" href="http://ragingwind.me">Jimmy Moon</author>
    <content src="plugins/cordova-plugin-chrome-apps-bootstrap/chromeapp.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="www/icons/icon144.png" />
        <icon src="www/icons/icon16.png" width="16" />
        <icon src="www/icons/icon36.png" width="36" />
        <icon src="www/icons/icon48.png" width="48" />
        <icon src="www/icons/icon57.png" width="57" />
        <icon src="www/icons/icon72.png" width="72" />
        <icon src="www/icons/icon96.png" width="96" />
        <icon src="www/icons/icon114.png" width="114" />
        <icon src="www/icons/icon128.png" width="128" />
        <icon src="www/icons/icon144.png" width="144" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon src="www/icons/icon144.png" />
        <icon src="www/icons/icon16.png" width="16" />
        <icon src="www/icons/icon36.png" width="36" />
        <icon src="www/icons/icon48.png" width="48" />
        <icon src="www/icons/icon57.png" width="57" />
        <icon src="www/icons/icon72.png" width="72" />
        <icon src="www/icons/icon96.png" width="96" />
        <icon src="www/icons/icon114.png" width="114" />
        <icon src="www/icons/icon128.png" width="128" />
        <icon src="www/icons/icon144.png" width="144" />
    </platform>
    <preference name="android-minSdkVersion" value="14" />
    <hook src="./hooks/before_prepare/remove-risks.js" type="before_prepare" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkMode" value="embedded" />
    <access origin="*" />
</widget>
